{
  "name": "sezzle-calculator-frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "pnpm check && next build",
    "check": "pnpm check:format && pnpm check:lint",
    "check:format": "prettier --check 'src/**/*.{ts,tsx,js,jsx,json,css}'",
    "check:lint": "next lint",
    "clean": "git clean -f -x -d",
    "deps": "pnpm dedupe",
    "dev": "CALCULATOR_REST_API_V1_URL=http://localhost:3001/v1 next dev",
    "fix": "pnpm fix:format && pnpm fix:lint",
    "fix:format": "prettier --write 'src/**/*.{ts,tsx,js,jsx,json,css}'",
    "fix:lint": "next lint --fix",
    "pre-submit": "pnpm install && pnpm fix && pnpm build && pnpm test:coverage",
    "start": "next start",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:coverage:open": "jest --coverage && (open coverage/lcov-report/index.html || xdg-open coverage/lcov-report/index.html)",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "next": "^14.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.0",
    "@testing-library/react": "^14.2.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^22.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "autoprefixer": "^10.4.0",
    "eslint": "^8.0.0",
    "eslint-config-next": "14.2.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.4.0",
    "prettier": "^3.7.4",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.0.0"
  }
}
